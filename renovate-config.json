{
  "enabled": true,
  "extends": [
    "config:recommended",
    "docker:disable",
    "group:allNonMajor",
    "helpers:pinGitHubActionDigestsToSemver",
    ":automergeMinor",
    ":automergePr",
    ":automergeRequireAllStatusChecks",
    ":combinePatchMinorReleases",
    ":prConcurrentLimit10",
    ":prImmediately",
    ":rebaseStalePrs",
    ":renovatePrefix",
    ":separateMultipleMajorReleases"
  ],
  "additionalReviewers": ["Jamesking56"],
  "dependencyDashboardAutoclose": true,
  "ignoreDeps": [
    "mariadb"
  ],
  "internalChecksFilter": "strict",
  "labels": ["dependencies"],
  "minimumReleaseAge": "3 days",
  "packageRules": [
    {
      "updateTypes": ["minor", "patch", "digest"],
      "automerge": true
    },
    {
      "updateTypes": ["major"],
      "automerge": false
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    },
    {
      "matchDepNames": ["php"],
      "enabled": false
    },
    {
      "packagePatterns": [
        "^larastan/larastan",
        "^phpstan/"
      ],
      "groupName": "phpstan packages",
      "groupSlug": "phpstan"
    },
    {
      "matchPackagePatterns": ["laravel/framework"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "packagePatterns": [
        "^@inertiajs/inertia.*$"
      ],
      "groupName": "inertia"
    },
    {
      "packagePatterns": [
        "^pestphp/.*$"
      ],
      "groupName": "pest"
    },
    {
      "packagePatterns": [
        "^vite",
        "laravel-vite-plugin",
        "^@vitejs/.*$"
      ],
      "groupName": "vite",
      "groupSlug": "vite"
    }
  ],
  "platformAutomerge": true,
  "prCreation": "not-pending",
  "rangeStrategy": "update-lockfile",
  "rollbackPrs": true,
  "schedule": ["* 9-23 * * 6-7", "* 17-23 * * 1-5"],
  "timezone": "Europe/London",
  "transitiveRemediation": true,
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"],
    "schedule": "at any time",
    "transitiveRemediation": true
  }
}
